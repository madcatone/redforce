<div class="span12">
    <h3>Problem Mail</h3>
    <div class="col-md-4 col-md-offset-8"></div>
          
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <%= render_tag_button_all %>
                <%= render_tag_button_cons %>
                <%= render_tag_button_pros %>
                <%= render_tag_button_spam %>
            Start<%= date_select(:start_date, "start",:default => Time.now , :discard_day => false)%>
            ~End<%= date_select(:end_date, "end",:default => Time.now , :discard_day => false)%>
            <button type="button" class="btn btn-xs btn-default">Submit</button></br>
            </div>
            <% @problems.each do |i| %>
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">  </h3>
                    </div>
                    <div class="panel-body">
                    <div class="col-sm-3">
                        <span class="label label-primary"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>郵件</span></br>
                    <%= i.From %>
                    </div>
                    <div class="col-sm-3">
                        <span class="label label-primary"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>標題</span></br>
                    <%= i.Title %>
                    </div>
                    <div class="col-sm-1">
                        <span class="label label-primary"><span class="glyphicon glyphicon-th" aria-hidden="true"></span>模塊</span></br>
                    <%= i.Mail_type %>
                    </div>
                    <div class="col-sm-2">
                        <span class="label label-primary"><span class="glyphicon glyphicon-book" aria-hidden="true"></span>版本</span></br>
                    <%= i.Version %>
                    </div>
                    <div class="col-sm-1">
                        <span class="label label-primary"><span class="glyphicon glyphicon-tags" aria-hidden="true"></span>分類</span></br>
                    <%= i.p_type %>
                    </div>
                    <div class="col-sm-2">
                        <span class="label label-primary"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>日期</span></br>
                    <%= i.p_date.to_s(:db)  %>
                    </div>
                    </br>
                    <div class="col-sm-6">
                        <span class="label label-primary"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>內文</span></br>
                    <%= i.Content %>
                    </div>
                    <div class="col-sm-6">
                        <span class="label label-primary"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>翻譯</span></br>
                    <%= i.Tran_Content %>
                    </div>
                    
                    </div>
                </div>
            </div>
             <% end %>
             <div class="col-md-4 col-md-offset-8"><%= will_paginate @problems %></div>
          
        </div>
           
</div>
