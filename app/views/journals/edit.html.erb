<div class="col-md-6">

<h2>修改Journal</h2>

    <%= simple_form_for @journal do |f| %>
        
        題目<%= f.input :title, :input_html => { :class => "form-control"}%>
        作者<%= f.input :author, :input_html => { :class => "form-control"} %>
        期刊頁數<%= f.input :description, :input_html => { :class => "form-control"}%>
        分類<%= f.input :journal_type, :input_html => { :class => "form-control"} %>
        老師<%= f.input :profile_id, :input_html => { :class => "form-control"}%>

    <div class="form-group">
        <%= f.submit "Submit", :disable_with => 'Submiting...', :class => "btn btn-primary" %>
    </div>
    
    <% end %>
</div>